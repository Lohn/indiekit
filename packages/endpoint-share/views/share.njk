{% extends "form.njk" %}

{% from "preview/macro.njk" import preview %}

{% block fieldset %}
  {{ preview({
    title: {
      text: __("share.name"),
      for: "name",
      value: name
    },
    text: {
      text: __("share.content"),
      for: "content",
      value: content
    },
    url: {
      text: __("share.url"),
      for: "url",
      value: url
    },
    date: "now",
    locale: application.locale
  }) }}

  {{ input({
    id: "name",
    name: "name",
    value: name,
    label: {
      text: __("share.name")
    }
  }) }}

  {{ textarea({
    id: "content",
    name: "content",
    value: content,
    label: {
      text: __("share.content")
    }
  }) | indent(8) }}

  {{ input({
    id: "url",
    name: "bookmark-of",
    value: url,
    label: {
      text: __("share.url")
    }
  }) }}

  {{ input({
    name: "access_token",
    value: session.token,
    type: "hidden"
  }) }}

  {{ input({
    name: "h",
    value: "entry",
    type: "hidden"
  }) }}

  {{ button({
    text: __("share.submit")
  }) }}
{% endblock %}