{% extends "form.njk" %}

{% set appClasses = "app--login" %}
{% block header %}
  {{ header({
    url: application.url,
    name: application.name
  }) }}
{% endblock %}
{% block fieldset %}
  {{ input({
    id: "me",
    name: "me",
    value: errors.me.value or publication.me,
    label: {
      text: __("session.login.me")
    },
    inputmode: "url",
    autocomplete: "url",
    errorMessage: {
      text: errors.me.msg,
      label: __("error")
    } if errors.me
  }) | indent(2) }}

  {{ input({
    name: "redirect_uri",
    value: redirect_uri,
    type: "hidden"
  }) | indent(2) }}

  {{ button({
    text: __("session.login.submit"),
    classes: "button--block"
  }) | indent(2) }}
{% endblock %}