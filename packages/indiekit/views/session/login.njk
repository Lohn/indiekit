{% extends "form.njk" %}

{% set appClasses = "app--login" %}
{% block header %}
  {{ header({
    url: application.url,
    name: application.name
  }) }}
{% endblock %}
{% block fieldset %}
  {% set me = publication.me | replace("http://", "") | replace("https://", "") %}
  <p>{{ __("session.login.description", "<b>" + me + "</b>") | safe }}</p>

  {{ input({
    name: "redirect_uri",
    value: redirect_uri,
    type: "hidden"
  }) | indent(2) }}

  {{ button({
    text: __("session.login.submit"),
    classes: "button--block"
  }) | indent(2) }}
{% endblock %}